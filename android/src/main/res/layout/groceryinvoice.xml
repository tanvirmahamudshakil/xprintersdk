<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    android:paddingTop="0dp"
    >
    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/rootViewPrint"
        >
        <TextView
            android:id="@+id/businessName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ALISLAH CASH CARRY"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textAllCaps = "true"
            />
        <TextView
            android:id="@+id/businessLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Luton, United Kingdom"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone : "
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/businessPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/branchName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Biscut Road"
            android:textAlignment="center"

            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/emailaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="shakilhassan887@gmail.com"
            android:textAlignment="center"

            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:src="@drawable/underline"
            android:contentDescription="Dotted" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:textColor="@color/black"
                android:layout_weight="1.7"
                android:textStyle="bold"
                android:text="Copy-Receipt of purchase(Inc Tax)"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/orderTime"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:gravity="end"
                android:textColor="@color/black"
                android:text="5/03/25 13:55:33"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:src="@drawable/underline"
            android:contentDescription="Dotted"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView

                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold"
                android:text="PRODUCT"
                />
            <TextView

                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="PRICE QTY"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <TextView

                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:gravity="end"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold"
                android:text="TOTAL"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:src="@drawable/underline"
            android:contentDescription="Dotted" />

        <LinearLayout
            android:id="@+id/containerSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/subTotalContainer"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/subTotal"
                    android:text="Sub Total"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/subTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:gravity="end"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:width="150dp"
                    android:layout_alignParentEnd="true"
                    android:textSize="16sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="start"

                android:id="@+id/totalContainer"
                >

                <TextView
                    android:layout_gravity="start"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                     />
                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:width="150dp"
                    android:textSize="35sp"
                    android:textStyle="bold"

                    />

            </LinearLayout>
            <ImageView
                android:id="@+id/dottedBelowyyyyy"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:src="@drawable/underline"
                android:contentDescription="Dotted" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="PAYMENT BY TENDER"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:text="AMOUNT"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/cardPayContainer"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/cardPay"
                    android:text="Card"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="16sp"

                    />
                <TextView
                    android:id="@+id/cardPay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:gravity="end"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:width="100dp"
                    android:layout_alignParentEnd="true"
                    android:textSize="16sp"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/cashPayContainer"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_toLeftOf="@id/cashPay"
                    android:text="Cash"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/cashPay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:gravity="end"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:width="100dp"
                    android:layout_alignParentEnd="true"
                    android:textSize="16sp"

                    />
            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:id="@+id/dottedBelowPaymentTender"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:src="@drawable/underline"
            android:contentDescription="Dotted" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:text="TAX RATE"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="PERCENTAGE"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="end"
                android:text="TAX"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/vatNumberCompany"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="VAT NUMBER:27454784"
            android:layout_height="wrap_content"/>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:src="@drawable/underline"
            android:contentDescription="Dotted" />
        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:text="Thank you for shopping with us"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/barcodeItem"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
        <TextView
            android:id="@+id/barcode_value"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:text="154785412254221"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/vatNote"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:text="jshdbdjhsbdvhsbdv"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>